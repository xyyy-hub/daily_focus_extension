{
  "manifest_version": 3,
  "name": "Daily Focus - Goal & Priority Tracker",
  "version": "1.0.0",
  "description": "Start each day with intention. Set your daily goal and 3 priorities with a beautiful interface for focus.",
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Daily Focus - Goal & Priority Tracker"
  },
  "homepage_url": "https://github.com/xyyy-hub/daily_focus_extension",
  "author": "Your Name"
}
